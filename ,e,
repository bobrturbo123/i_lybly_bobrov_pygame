class player:
    def __init__(self,name,waer,wearpone,healf,hit_power,enemy):
        self.name = name
        self.waer = waer
        self.wearpone = wearpone
        self.healf = healf
        self.hit_power=hit_power
        self.enemy = enemy
    def pechat(self):
        print("ВАШЕ ИМЯЯ:",self.name,
              "ВАША ОДЕЖДАААЧААААААВВААВ:",self.waer,
              "ВАША ОРУЖИЕЕЕЕЕЕЕЕ:",self.wearpone,
              "ЗДОРОВЬЕ ПОПУСКАА:",self.healf,
              "НАСКОЛЬКО СЛАБ ВАШ УДАРЧИК:",self.hit_power)
    def hit(self):
        print(self,"атакует",self.enemy,"используя",self.wearpone,"c cилой",self.hit_power,"теперь здоровье")
me = player("Гойда","ЛЕГЕНДАРНАЯ прозрачная мантия","ЛЕГЕНДАРНЫЙ ПЕРЕКОВАНЫЙ ЗАЧАРОВАНЫЙ ВАМПИРСКИЙ ржавый клинок",150,300)
me.pechat()
